{
  "manifest_version": 2,
  "name": "vxchrome",
  "version": "0.1",
  "commands": {
    "listen-en": {
      "description": "Listen [first language]",
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      }
    },
    "listen-th": {
      "description": "Listen [second language]",
      "suggested_key": {
        "default": "Ctrl+Shift+9"
      }
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["clipboardWrite", "notifications"],

  "browser_action": {
    "default_icon": "icon.png"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
